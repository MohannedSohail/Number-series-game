<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sh_disp"
    android:orientation="vertical"
    tools:context=".Game">

    <TextView
        android:id="@+id/agame_tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/sh_tv"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/agame_tv_gamer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/sh_tv"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/agame_tv_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"
            android:background="@drawable/sh_tv"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/sh_img"
        android:padding="5sp"
        app:columnCount="3"
        app:rowCount="3">

        <TextView
            android:id="@+id/agame_tv_num1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/sh_sudoko"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="35sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/agame_tv_num2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/sh_sudoko"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="35sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/agame_tv_num3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/sh_sudoko"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="35sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/agame_tv_num4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/sh_sudoko"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="35sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/agame_tv_num5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/sh_sudoko"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="35sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/agame_tv_num6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/sh_sudoko"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="35sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/agame_tv_num7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/sh_sudoko"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="35sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/agame_tv_num8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/sh_sudoko"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="35sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/agame_tv_num9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/sh_sudoko"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="35sp"
            app:layout_columnWeight="1" />
    </androidx.gridlayout.widget.GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/agame_ed_enter_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter number"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/agame_btn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/sh_btn_login"
            android:padding="15dp"
            android:text="check"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/agame_btn_newgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:background="@drawable/sh_newgame"
        android:padding="15dp"
        android:text="new game"
        android:textSize="24sp" />

</LinearLayout>