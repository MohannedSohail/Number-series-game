<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".Settings">

    <Button
        android:id="@+id/aset_btn_show_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/sh_newgame"
        android:padding="20dp"
        android:text="show all games"
        android:textSize="20sp" />

    <Button
        android:id="@+id/aset_btn_show_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/sh_newgame"
        android:padding="20dp"
        android:text="show last game date"
        android:textSize="20sp" />

    <Button
        android:id="@+id/aset_btn_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/sh_newgame"
        android:padding="20dp"
        android:text="change passward"
        android:textSize="20sp" />

    <Button
        android:id="@+id/aset_btn_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/sh_newgame"
        android:padding="20dp"
        android:text="clear  game history"
        android:textSize="20sp" />
</LinearLayout>